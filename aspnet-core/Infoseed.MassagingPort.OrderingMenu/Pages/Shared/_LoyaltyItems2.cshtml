@model Infoseed.MassagingPort.OrderingMenu.Pages.Model.OrderingMenuItemPagenationModel
@{
}




@if (@Model.lstOrderingMenuItemModel != null)
{
    <input id="hdSubCatId" type="hidden" value="@Model.SubCategoryId" />


    @if (Model.lstOrderingMenuItemModel.Count != 0)
    {

        foreach (var item in Model.lstOrderingMenuItemModel)
        {

            <div class="col-md-4 mb-3 jsFilter" data-type="cat01" id="myDIV">
                <!--Type Of catgory-->
                <div class="item-card d-flex flex-column  @Html.Raw(item.HasOption && item.IsInService?"btn-product-detials": "not-available") " data-id="@item.Id" id="product">
                    <div class="d-flex align-items-start">
                        <div class="item-thumb" style="height: 83px!important;">

                            @if (@item.ImageUri != null && @item.ImageUri != "")
                            {
                                <img class="borderRadius" src="@item.ImageUri" alt="">
                            }
                            else
                            {
                                <img class="borderRadius" src="img/404.png" alt="">
                            }
                        </div>
                        <div class="p-2">
                            <h4> @item.ItemName</h4>
                            <small class="trim-text-50 ItemDescription">
                                @item.ItemDescription
                            </small>
                        </div>
                    </div>
                    @if (item.IsInService)
                    {
                        <div class="filter-img d-flex justify-content-between align-items-center mt-auto">
                            <div class="item-price">
                                <strong>  </strong>
                                <strong>  </strong>
