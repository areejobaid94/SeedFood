                                       <span class="point-style mx-2" id="stItemLoyaltyPoints"> <i class="icon-gift"></i></span>
                                    }
                                    else
                                    {
                                        <span class="point-style mx-2" id="stItemLoyaltyPoints">  @item.LoyaltyPoints <i class="icon-gift"></i></span>
                                    }
                                    
                                }
                            </div>
                            <button class="btn btn-primary" type="button">
                                 @localizer.Get("Add")
                            </button>
                        </div>
                    }
                    else
                    {//<button class="btn btn-secondary btn-sm col-12" asp-action="AddToCart(@item)" disabled> <i class="mdi mdi-cart-outline"></i> Not Available</button>

